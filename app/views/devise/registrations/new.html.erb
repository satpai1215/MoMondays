<div class = "user_session_page">
    <h2>Sign Up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class = "field"><%= f.label :email %> <br/>
      <%= f.email_field :email, :autofocus => true %></div>

      <div class = "field"><%= f.label :firstname %> <br/>
      <%= f.text_field :firstname %></div>

      <div class = "field"><%= f.label :lastname %> <br/>
      <%= f.text_field :lastname %></div>

      <div class = "field"><%= f.label :username %> <br/>
      <%= f.text_field :username %></div>

      <div class = "field"><%= f.label :password %> <br/>
      <%= f.password_field :password %></div>

      <div class = "field"><%= f.label :password_confirmation %> <br/>
      <%= f.password_field :password_confirmation %></div>

      <div class = "field"><%= f.label :access_code %> <br/>
      <%= f.password_field :access_code %></div>

       <div class = "actions"><%= f.submit "Sign Up", {:class => "sign_in_btn btn btn-primary"} %></div>
    <% end %>

</div>
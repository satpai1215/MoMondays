<div class = "user_session_page">

    <h2>Edit <%= resource_name.to_s.humanize %> Info</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true %>
      </div>

      <div class="field">
          <%= f.label :username %> <br/>
          <%= f.text_field :username %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, :autocomplete => "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %>
      </div>

      <div class ="field" id = "notification_email_select">
        <%= f.check_box :notification_emails %>
        <%= f.label  :notification_emails, "Send Notification Emails?" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(to confirm your changes)</i><br />
        <%= f.password_field :current_password %>
      </div>

      <div class = "actions"><%= f.submit "Update", {:class => "sign_in_btn btn btn-primary"} %></div>
    
    <% end %>


    <div class = "cancel_action">
      <h4>Cancel Account?</h4>
      <%= button_to("Cancel my account", registration_path(resource_name), :data => { :confirm => "WARNING: THIS CANNOT BE UNDONE. If you cancel your account, all of the events you created will also be removed" }, :method => :delete, :id => "cancel_btn", :class => "btn btn-danger") %>
    </div>

    <%= link_to "Back", :back %>

</div>
<%= form_tag("/guests/update_guestlist", :method => :post) do %>
  <div class="field">
    <%= hidden_field_tag :event_id, @event.id %>
  </div>

  <div class="field">
    <%= label_tag(:guest_form_title, "Invite Guests for '#{@event.name}'") %>
  </div>

  <div class="field">
    <% User.all.each do |user| %>
      <% if current_user.id != user.id %>
      <%= check_box_tag "guest_ids[]", user.id, (user.invited?(@event) ? true : false) %>
      <%= label_tag :user, (user.username) %> </br>
      <% end %>
    <% end %>
  </div>


  <div class="actions">
    <%= submit_tag "Add Guests" %>
    <%= image_tag("/assets/ajax-loader.gif", :id => "event-loading-gif",  :style => "visibility: hidden;") %>
  </div>
<% end %>
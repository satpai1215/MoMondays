
<div id = "eventHistory" class ="eventList">
	<h2>Previous Events</h2>
	<div id = "eventHistoryTable" class = "tableContainer">
        <table class = "table table-striped">
            <thead id = "eventHistoryHeadings">
            <tr>
                <th>Date</th>
                <th>Event Name</th>
                <th>Created By</th>
                <th>Winning Venue</th>
            </tr>
        </thead>
        <tbody>
            <%if !Event.find(:all).empty? %>
                <%Event.where(:stage => "Finished").order('event_start DESC').each do |event| %>
                          <tr class = "notfirst">
                            <td><%= event.event_start.strftime("%d%b%Y") %></td>
                            <td><%= link_to event.name, event_path(event) %>
                            <td><%= event.user.username %></td>
                            <td><%= Venue.find(event.winner).name unless event.winner == nil %></td>
                          </tr>
                <% end %>
            <% end %>
        </tbody>
        </table>
    </div><!-- tableContainer -->
</div><!-- eventList -->

<div id = "eventHistory" class ="eventList">
	<h2>Finished Events</h2>
    <div class = "row">
	<div id = "eventHistoryTable"  class = "span10 offset1">
        <table class = "table table-striped table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Event Name</th>
                    <th>Created By</th>
                    <th>Winning Venue</th>
                </tr>
            </thead>

            <tbody>
                <%if !Event.find(:all).empty? %>
                    <%Event.where(:stage => "Finished").order('event_start DESC').each do |event| %>
                              <tr class = "notfirst">
                                <td><%= event.event_start.strftime("%d%b%Y") %></td>
                                <td><%= link_to event.name, event_path(event) %>
                                <td><%= event.user.username %></td>
                                <td><%= (event.winner == nil ? "No Venues Suggested" : Venue.find(event.winner).name) %></td>
                              </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>
    </div><!-- eventHistoryTable -->
    </div><!--span10-->
</div><!-- eventList -->